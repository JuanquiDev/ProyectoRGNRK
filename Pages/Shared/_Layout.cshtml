<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />
    <title>@ViewData["Title"] - Ragnarok</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://cdn.tiny.cloud/1/9vwwtj1gte9mg08as34118i9tnrivnv7jg7pvinkrjn8knli/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea#tiny',
                    plugins: [
                'a11ychecker', 'advlist', 'advcode', 'advtable', 'autolink', 'checklist', 'markdown',
                'lists', 'link', 'image', 'charmap', 'preview', 'anchor', 'searchreplace', 'visualblocks',
                'powerpaste', 'fullscreen', 'formatpainter', 'insertdatetime', 'media', 'table', 'help', 'wordcount'
            ],
            toolbar: 'undo redo | a11ycheck casechange blocks | bold italic backcolor | alignleft aligncenter alignright alignjustify |' +
                'bullist numlist checklist outdent indent | removeformat | code table help'
        })
    </script>


    <style>

        .custom-bg-color{
            background-color: #272424;
        }

        .custom-button {
            background-color: #199DFC;
            border-radius: 7px;
            width: 108px;
            height: 36px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .header-black {
            background-color: #000000;
            height: 65px;
        }

        .footer-black {
            background-color: #000000;
            height: 70px;
        }

        .footer-links {
            margin-top: 15px;
        }

        /* Add padding to the body to avoid content being hidden behind the fixed header */
        body {
            padding-top: 65px;
        }
    </style>
</head>
<body class="text-white d-flex flex-column custom-bg-color" style=min-height: 100vh;">
    <header class="menu d-flex align-items-center header-black fixed-top">
        <div class="container-fluid">
            <div class="row justify-content-between align-items-center">
                <div class="col-auto">
                    <a href="~/">
                        <img src="~/img/logo-blanco.png" alt="Logo" width="175" height="26" />
                    </a>
                    <img class="logo2-1-icon" loading="lazy" alt="" src="~/public/logo2-1@2x.png" />
                </div>
                <div class="col-6">
                    @using Microsoft.AspNetCore.Identity
                    @using RGNRK.Data

                    @inject SignInManager<User> SignInManager
                    @inject UserManager<User> UserManager

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <partial name="_NavBar" />
                    }
                    else
                    {
                        <nav class="secciones d-flex justify-content-center">
                            <div class="ejercicios me-3"><a class="nav-link text-light" asp-area="" asp-page="/Ejercicios">Ejercicios</a></div>
                            <div class="trainers me-3"><a class="nav-link text-light" asp-area="" asp-page="/Trainers">Trainers</a></div>
                            <div class="blog me-3"><a class="nav-link text-light" asp-area="" asp-page="/Blog">Blog</a></div>
                            <div class="entrenamientos me-3"><a class="nav-link text-light" asp-area="" asp-page="/Entrenamientos">Entrenamientos</a></div>
                            <div class="contacto me-3"><a class="nav-link text-light" asp-area="" asp-page="/Contacto">Contacto</a></div>
                        </nav>
                    }
                </div>
                <div class="col-auto">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm">
                            <button type="submit" class="btn custom-button px-5 py-2 mx-1">Salir</button>
                        </form>
                    }
                    else
                    {
                        <button class="login-area btn custom-button px-5 py-2 mx-1">
                            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
                        </button>
                    }
                </div>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer class="menu1 mt-auto fixed-bottom footer-black">
        <div class="container d-flex align-items-center justify-content-center text-center">
            <div class="footer-logo">
                <img class="logo2-1-icon1" alt="" src="~/public/logo2-1-1@2x.png" />
            </div>
            <div class="footer-links d-flex justify-content-around align-items-center">
                <div class="ejercicios1 me-3"><a asp-area="" asp-page="/PoliticaCookies" class="text-light mx-3">Política de cookies</a></div>
                <div class="trainers1 me-3"><a asp-area="" asp-page="/PoliticaPrivacidad" class="text-light mx-3">Política de privacidad</a></div>
                <div class="blog1"><a asp-area="" asp-page="/TerminosUso" class="text-light mx-3">Términos de uso</a></div>
            </div>
            <div class="social-area">
                <div class="social-icons">
                    <img class="facebook-icon" loading="lazy" alt="" src="~/public/facebook.svg" />
                    <img class="twitter-icon" loading="lazy" alt="" src="~/public/twitter.svg" />
                    <img class="instagram-icon" loading="lazy" alt="" src="~/public/instagram.svg" />
                </div>
            </div>
            <img class="youtube-icon" loading="lazy" alt="" src="~/public/youtube.svg" />
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
