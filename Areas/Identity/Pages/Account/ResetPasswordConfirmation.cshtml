@page
@model ResetPasswordConfirmationModel

@{
    ViewData["Title"] = "Confirmación de restablecimiento de contraseña";
}

<style>
    .centered-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .form-container {
        max-width: 500px;
        width: 100%;
    }

    .btn-primary {
        background-color: #199DFC;
        color: white;
    }

    .title {
        font-size: 50px;
    }

</style>

<div class="centered-container">
    <div class="form-container">
        <h1 class="text-center title">@ViewData["Title"]</h1>
        <p class="text-center">
            Tu contraseña ha sido restablecida. Por favor, <a asp-page="./Login">haz clic aquí para iniciar sesión</a>.
        </p>
    </div>
</div>
