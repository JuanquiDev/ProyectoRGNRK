@page
@model RegisterModel
@{
    ViewData["Title"] = "Regístrate";
}

<style>
    body {
        background-color: #333; /* Set background to a dark color for contrast */
    }

    .centered-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .form-container {
        max-width: 500px;
        width: 100%;
        background-color: #199DFC;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        color: white; /* Ensure all text is white */
    }

    .form-floating {
        margin-bottom: 1rem;
    }

    .form-control, .form-check-input {
        background-color: white;
        border: 1px solid white;
        color: black;
    }

        .form-control::placeholder {
            color: #999;
        }

    .form-label {
        color: white;
    }

    .btn-black {
        background-color: black;
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 1rem;
        float: right;
        transition: background-color 0.3s;
    }

        .btn-black:hover {
            background-color: #333;
            color: white; /* Ensuring the text color remains white on hover */
        }

    h1, h2 {
        text-align: center;
    }

    h1 {
        color: black; /* Set title color to black */
    }

    h2 {
        color: white;
    }
</style>

<div class="centered-container">
    <div class="form-container">
        <h1>@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Email*" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Contraseña*" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Repetir contraseña*" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="Input.AcceptTerms" class="form-check-input" aria-required="true" />
                <label asp-for="Input.AcceptTerms" class="form-check-label">Acepto los términos y condiciones de uso</label>
                <span asp-validation-for="Input.AcceptTerms" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn btn-black">Aceptar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
